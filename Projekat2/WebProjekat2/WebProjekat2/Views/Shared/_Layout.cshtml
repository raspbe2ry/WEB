<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/jquery-ui-1.12.1.custom/css/datepicker.css" rel="stylesheet" />
    <link href="~/lib/jquery-ui-1.12.1.custom/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/css/fontawesome.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Student" asp-action="Index" class="navbar-brand">Karate</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Student" asp-action="Index">Students</a></li>
                    <li><a asp-area="" asp-controller="Training" asp-action="Index">Trainings</a></li>
                    <li><a asp-area="" asp-controller="Trainer" asp-action="Index">Trainers</a></li>
                    <li><a asp-area="" asp-controller="BeltEarning" asp-action="Index">Belt Earnings</a></li>
                    <li><a asp-area="" asp-controller="Analytic" asp-action="Index">Analytics</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/js/bootbox.min.js"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/js/bootstrap-datetimepicker.js"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/js/jquery.blockUI.js"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/js/collapse.js"></script>
    <script src="~/js/fontawesome.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
    <div>
        @RenderBody()
    </div>
    <script>
    </script>
</body>
</html>
